{
  "name": "nft-launchpad-frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite --port 3000\" \"pnpm codegen:watch\"",
    "start": "vite --port 3000",
    "build": "npm run lint && vite build && tsc",
    "build:abi": "pnpx tsx scripts/build-abi.ts",
    "serve": "vite preview",
    "test": "vitest run",
    "format": "prettier --write .",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch"
  },
  "dependencies": {
    "@aptos-labs/ts-sdk": "^3.1.3",
    "@aptos-labs/wallet-adapter-react": "^7.0.1",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@radix-ui/react-dialog": "^1.1.10",
    "@radix-ui/react-dropdown-menu": "^2.1.11",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.2",
    "@radix-ui/react-slider": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-form": "^1.12.2",
    "@tanstack/react-query": "^5.80.6",
    "@tanstack/react-query-devtools": "^5.80.6",
    "@tanstack/react-router": "^1.121.0",
    "@tanstack/react-router-devtools": "^1.121.0",
    "@tanstack/router-plugin": "^1.121.0",
    "@thalalabs/surf": "^1.9.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.476.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.6",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.12.16",
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@parcel/watcher": "^2.5.1",
    "@tanstack/eslint-config": "^0.1.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.14.1",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "axios": "^1.8.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.28.0",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.7.2",
    "vite": "^6.1.0",
    "vitest": "^3.0.5",
    "web-vitals": "^4.2.4"
  },
  "pnpm": {
    "overrides": {
      "@aptos-labs/wallet-adapter-react": "7.0.1",
      "@aptos-labs/ts-sdk": "3.1.3",
      "@aptos-labs/wallet-standard": "0.5.0",
      "@aptos-labs/wallet-adapter-core": "6.0.1",
      "react": "19.1.0"
    }
  }
}
